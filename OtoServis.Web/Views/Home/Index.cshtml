@using System.Text.RegularExpressions;
@using OtoServis.Entities.Web;
@using OtoServis.Web.Custom;
@{
    ViewBag.Title = "Oto Servis";

}

@if (ViewBag.Slider != null)
{
    var slider = (List<Slider>)ViewBag.Slider;
    int sayac = 0;
    <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            @for (int i = 0; i < slider.Count; i++)
            {
                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="@i" class="active" aria-current="true" aria-label="Slide @i"></button>
            }
        </div>
        <div class="carousel-inner">
            @foreach (var item in slider)
            {
                string aktif = "";
                if (sayac == 0)
                {
                    aktif = "active";
                }
                <div class="carousel-item @aktif">
                    <img src="@item.Resim  " class="d-block w-100" alt="MKY Oto Servis Motor Arıza Tamir">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>@item.Baslik</h5>
                        <p>@item.Tanimlama</p>
                    </div>
                </div>
                sayac++;
            }

        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
}



<div class="container mt-4">
    @if (ViewBag.Kampanya != null)
    {
        var kampanya = (Kampanya)ViewBag.Kampanya;
        <div class="row">
            <div class="col">
                @Html.Raw(kampanya.Icerik)
            </div>
        </div>
    }






    <hr />
    <h1 class="text-center">UYGULAMALARIMIZ</h1>
    <div class="row mt-5">
        @if (ViewBag.Uygulama != null)
        {
            var uygulama = (List<Uygulama>)ViewBag.Uygulama;
            foreach (var item in uygulama)
            {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img class="card-img-top" src="@item.Resim" alt="@item.Baslik" />
                        <div class="card-body">
                            <div class="card-title">
                                <h5 class="text-center">@item.Baslik</h5>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }

    </div>
    <hr />
    <h1 class="text-center">HAKKIMIZDA</h1>
    <div class="row mt-5 mb-4">
        @if (ViewBag.Hakkimizda != null)
        {
            var hakkimizda = (Hakkimizda)ViewBag.Hakkimizda;
            <div class="col-md-4">
                <img class="img-fluid" src="@hakkimizda.Resim" alt="" />
            </div>
            <div class="col-md-8">
                @Html.Raw(hakkimizda.Icerik)
            </div>
        }

    </div>
    <hr />
    <h1 class="text-center">BLOG</h1>
    <div class="row mt-5">
        @if (ViewBag.Blog != null)
        {
            var blog = (List<Blog>)ViewBag.Blog;
            foreach (var item in blog)
            {
        <div class="col-md-6 mb-4">
            <h5>
                @Html.ActionLink(item.Baslik,"BlogDetay", new { baslik = Ozel.LinkDuzenle(item.Baslik),blogId=item.BlogId}, new {@class = "text-dark"})
            </h5>
            
            @{
                string kisaltma = Regex.Replace(item.Icerik, "<.*?>", string.Empty);
                if (kisaltma.Length > 200)
                {
                    kisaltma = kisaltma.Substring(0, 200) + "...";
                }
                @kisaltma
            }
        </div>
            }
        }
    </div>
    <hr />
    <div class="row">
        <div class="col-12">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d754.1452067193625!2d32.86239846001563!3d39.90878913028939!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14d34f8dc3a41e83%3A0x24425434515cbb6b!2sKennedy%2041!5e0!3m2!1str!2str!4v1659304578380!5m2!1str!2str" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
    </div>
</div>
