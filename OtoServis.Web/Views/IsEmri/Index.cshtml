@model IEnumerable<OtoServis.Entities.Servis.Musteri>
@{
    ViewBag.Title = "İş Emri Oluşturmak İçin Müşteri Seçiniz";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@using (Html.BeginForm("Index","IsEmri"))
{
    <div class="row">
        <div class="col">
            Müşteri Ara(İsim / Telefon)
            <input type="text" class="form-control" name="ara" />
        </div>
        <div class="col">
            <br />
            <input type="submit" class="btn btn-secondary" value="Ara" />
        </div>
    </div>
}

<hr />
<table class="table table-sm table-responsive">
    <thead>
        <tr>
            <th>Ad Soyad / Unvan</th>
            <th>Telefon</th>
            <th>Eposta</th>
            <th>Adres</th>
            <th></th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.AdSoyad</td>
            <td>@item.Telefon</td>
            <td>@item.Eposta</td>
            <td>@item.Adres</td>
            <td>
            @Html.ActionLink("İş Emri Oluştur", "IsEmriOlustur", new { musteriId = item.MusteriId}, new { @class="btn btn-sm btn-success"})
            </td>
        </tr>
    }

</table>
